<nav class="navbar">
  <a href="/" title="Inicio"><i class="fa-solid fa-house"></i> <span>Inicio</span></a>
  <a href="/clientes" title="Clientes"><i class="fa-solid fa-user-group"></i> <span>Clientes</span></a>
  <a href="/reservas" title="Reservas"><i class="fa-solid fa-calendar-check"></i> <span>Reservas</span></a>
  <a href="/servicios" title="Servicios"><i class="fa-solid fa-scissors"></i> <span>Servicios</span></a>
  <a href="/pagos" title="Pagos"><i class="fa-solid fa-cash-register"></i> <span>Pagos</span></a>
</nav>

<style>
.navbar {
  display: flex;
  justify-content: center;
  gap: 18px;
  background: transparent;
  margin-top: 18px;
  font-size: 1.15rem;
}
.navbar a {
  display: flex;
  align-items: center;
  gap: 6px;
  color: #fff;
  font-weight: 500;
  padding: 8px 15px;
  border-radius: 14px;
  text-decoration: none;
  position: relative;
  overflow: hidden;
  transition: background 0.2s, color 0.2s;
}
.navbar a:hover, .navbar a:focus {
  background: rgba(255,255,255,0.10);
  color:rgb(118, 118, 119);
}
.navbar a::after {
  content: "";
  position: absolute;
  left: 16px; right: 16px; bottom: 5px;
  height: 2.5px;
  background: linear-gradient(90deg,rgb(148, 211, 148), #fff2);
  transform: scaleX(0);
  transition: transform 0.25s cubic-bezier(.4,0,.2,1);
  border-radius: 2px;
}
.navbar a:hover::after, .navbar a:focus::after {
  transform: scaleX(1);
}
.navbar i {
  font-size: 1.15em;
  transition: color 0.2s;
}
@media (max-width: 640px) {
  .navbar {
    flex-wrap: wrap;
    gap: 7px;
    font-size: 1rem;
  }
  .navbar a {
    padding: 7px 8px;
  }
  .navbar span {
    display: none;
  }
}
</style>
